// More info: https://containers.dev/implementors/json_reference/
{
	"name": "C# (.NET) + Node.js",
	"image": "mcr.microsoft.com/devcontainers/base:1-${templateOption:imageVariant}",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "latest",
			"additionalVersions": "${templateOption:dotnetVersion}"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "${templateOption:nodeVersion}",
			"nodeGypDependencies": true,
			"nvmInstallPath": "/usr/local/share/nvm",
			"pnpmVersion": "latest",
			"nvmVersion": "latest",
			"installYarnUsingApt": true
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"ms-dotnettools.csharp"
			]
		}
	},
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
		"source=node_modules,target=/workspace/node_modules,type=volume"
	],
	"postCreateCommand": "npm install -g npm@latest"
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// ðŸ‘‡ Configure tool-specific properties.
	// "customizations": {},
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
